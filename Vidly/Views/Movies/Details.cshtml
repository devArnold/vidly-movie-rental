@model Vidly.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>




<dl class="dl-horizontal">
    <dt>
        Genre:
    </dt>
    <dd>
        @Model.Genre
    </dd>

    <dt>
        Release Date:
    </dt>
    <dd>
        @Html.DisplayFor(model => model.ReleaseDate)
    </dd>

    <dt>
        Date Added:
    </dt>
    <dd>
        @Html.DisplayFor(model => model.DateAdded)
    </dd>

    <dt>
        Number in Stock:
    </dt>
    <dd>
        @Model.NumberInStock
    </dd>
</dl>


