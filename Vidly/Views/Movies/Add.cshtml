@model Vidly.Models.Movie
@using Vidly.Models
@{
    ViewBag.Title = "Add";
}

<h2>Add Movie</h2>

@using (Html.BeginForm("Add", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownList("Genre", new SelectList(Enum.GetValues(typeof(Genre))), "Select genre", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)
        @*@Html.TextBoxFor(m => m.ReleaseDate, new { @class = "form-control" })*@
        @Html.EditorFor(m => m.ReleaseDate, new { htmlAttributes = new {@class="form-control", @type="date"}})
    </div>

    
    <div class="form-group">
        @Html.LabelFor(m => m.NumberInStock)
        @Html.TextBoxFor(m => m.NumberInStock, new { @class= "form-control"  })
    </div>

    @*@Html.HiddenFor(m => m.DateAdded)*@

    <button type="submit" class="btn btn-primary">Add</button>

}
